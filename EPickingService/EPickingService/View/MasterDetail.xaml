                               Text="Nom.Usuario" 
                               TextColor="White" 
                               Font="Bold,40" 
                               HorizontalOptions="FillAndExpand" 
                               VerticalOptions="Center"/>

                    </StackLayout>
                    
                    <Button x:Name="NameZeroRows" 
                            HeightRequest="70" 
                            Image="MDphone.png" 
                            Text="Cero Filas" 
                            VerticalOptions="End" 
                            BorderColor="Transparent" 
                            BackgroundColor="Transparent" 
                            Clicked="ZeroRows_Clicked"/>
                    <!--<BoxView WidthRequest="50" 
                             HeightRequest="1" 
                             Opacity="0.5"
                             BackgroundColor="#880E4F"/>-->

                    <Button x:Name="Namesalir" 
                            HeightRequest="70" 
                            Image="MDclose.png" 
                            Text="Salir" 
                            VerticalOptions="End" 
                            BorderColor="Transparent" 
                            BackgroundColor="Transparent" 
                            Clicked="Namesalir_Clicked"/>
                    <!--<BoxView WidthRequest="50" 
                             HeightRequest="1" 
                             Opacity="0.5"
                             BackgroundColor="#880E4F"/>-->

                </StackLayout>
            </ScrollView>
        </ContentPage>
